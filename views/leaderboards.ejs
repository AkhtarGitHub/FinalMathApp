<%- include('partials/header') %>

<main class="main-content index_container">
    <h1>Leaderboards</h1>

    <table>
        <thead>
            <tr>
                <th>Rank</th>
                <th>Streak</th>
                <th>Date Achieved</th>
            </tr>
        </thead>
        <tbody>
            <% if (topStreaks.length > 0) { %>
                <% topStreaks.forEach((entry, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= entry.streak %></td>
                        <td><%= entry.date %></td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="3">No streaks recorded yet.</td>
                </tr>
            <% } %>
        </tbody>
    </table>

    <a href="/">Back to Home</a>
</main>
</body>
</html>
